---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactCTA from '../components/ContactCTA.astro';
import Hero from '../components/Hero.astro';
import Grid from '../components/Grid.astro';
---

<BaseLayout
	title="Find Your Fight | Pyx Boxing"
	description="Discover your community"
>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<Hero
				title="Find Your Community"
				align="start"
			/>

			<h4>This is where we will promote women's boxing gyms!</h4>

			<Grid variant="offset">

				<li style="width: 100%">
					<iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3021.7924767584974!2d-73.98927992406547!3d40.74439603714594!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c259a70f0f7c25%3A0x75d8b5d1cba54c90!2sWomen&#39;s%20World%20of%20Boxing!5e0!3m2!1sen!2sus!4v1718834472692!5m2!1sen!2sus"
                    width="100%"
                    height="450"
                    style="border:0; border-radius: 1rem;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"
                    ></iframe>

				</li>

			</Grid>

		</main>
		<ContactCTA />
	</div>
</BaseLayout>
